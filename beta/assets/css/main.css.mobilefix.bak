
/* === Starfall "Nova" Theme === */
:root{
  --bg:#070711; --bg-elev:#0d0b19; --panel:#141129; --panel-2:#191536;
  --ink:#f5f7ff; --muted:#a8afd0; --accent:#8d6bff; --accent-2:#21d4ff;
  --line:#2a2150; --ring:#4a3a95; --shadow:0 10px 30px rgba(0,0,0,.4);
}
*{box-sizing:border-box}
html,body{height:100%}
body{margin:0;font-family:ui-sans-serif,system-ui,Segoe UI,Roboto,Helvetica,Arial,sans-serif;
  background: radial-gradient(1200px 600px at 80% -10%, rgba(33,212,255,.12), transparent 60%),
              radial-gradient(900px 500px at -10% 10%, rgba(141,107,255,.17), transparent 65%),
              var(--bg); color:var(--ink); line-height:1.6}
a{color:var(--accent-2);text-decoration:none} a:hover{text-decoration:underline}
.container{max-width:1200px;margin:auto;padding:0 22px}

/* Header */
.site-header{position:sticky;top:0;z-index:50;background:linear-gradient(180deg, rgba(8,6,18,.9), rgba(8,6,18,.6));backdrop-filter:saturate(120%) blur(8px);border-bottom:1px solid var(--line)}
.nav-wrap{display:flex;align-items:center;justify-content:space-between;gap:18px;padding:14px 0}
.brand{display:flex;align-items:center;gap:10px;color:var(--ink)} .brand .logo{width:30px;height:30px} .brand span{font-weight:800;letter-spacing:.2px}
.main-nav a{display:inline-block;color:var(--ink);opacity:.9;margin:0 12px;padding:6px 8px;border-radius:8px}
.main-nav a:hover{opacity:1;background:rgba(141,107,255,.15)}
.social-nav a{display:inline-flex;padding:6px;border-radius:8px}
.social-nav a:hover{background:rgba(33,212,255,.12)}
.icon{width:18px;height:18px;fill:#aeb3d6}

/* Footer */
.site-footer{border-top:1px solid var(--line);margin-top:60px;background:rgba(10,9,22,.7)}
.site-footer .container{padding:24px 0;color:var(--muted);font-size:14px}

/* Page */
.page{min-height:60vh;padding:44px 0}

/* Buttons */
.btn{--bg:var(--accent);display:inline-flex;align-items:center;justify-content:center;gap:8px;padding:12px 16px;border-radius:10px;background:linear-gradient(180deg, var(--bg), #6b52e6);color:white;font-weight:700;border:0;box-shadow:var(--shadow);transition:transform .12s ease, filter .12s ease}
.btn:hover{transform:translateY(-1px);filter:brightness(1.05)} .btn:active{transform:translateY(0)}
.btn.outline{background:transparent;color:var(--accent);border:1px solid var(--ring);box-shadow:none}
.link{color:var(--accent-2);font-weight:700}

/* Cards & Surfaces */
.card{background:linear-gradient(180deg, rgba(25,18,54,.7), rgba(17,13,35,.7));border:1px solid var(--line);border-radius:14px;padding:18px;box-shadow:var(--shadow)}
.muted{color:var(--muted)}

/* Hero Section */
.hero-section{position:relative;margin-top:-20px}
.hero-media{position:relative;border-bottom:1px solid var(--line)}
.hero-media::after{content:"";position:absolute;inset:0;background:radial-gradient(60% 60% at 50% 40%, rgba(0,0,0,.0), rgba(7,7,17,.55) 60%, rgba(7,7,17,.85) 100%);pointer-events:none}
.hero-media video{width:100%;height:auto;display:block;filter:saturate(1.05) contrast(1.05) brightness(.8)}
.hero-overlay{position:absolute;inset:0;display:flex;align-items:center;justify-content:center;text-align:center;padding:24px}
.hero-overlay h1{font-size:clamp(32px,5vw,60px);margin:.1em 0;letter-spacing:.2px}
.hero-overlay p{font-size:clamp(14px,2.2vw,18px);opacity:.95}
.cta-row{display:flex;gap:12px;flex-wrap:wrap;justify-content:center;margin-top:14px}

/* Grids */
.grid-2{display:grid;grid-template-columns:1fr;gap:20px;margin-top:28px}
@media(min-width:860px){.grid-2{grid-template-columns:1fr 1fr}}

/* Blog grid + expand */
.blog-grid{display:grid;grid-template-columns:1fr;gap:18px;margin-top:20px}
@media(min-width:760px){.blog-grid{grid-template-columns:1fr 1fr}}
@media(min-width:1080px){.blog-grid{grid-template-columns:1fr 1fr 1fr}}
.blog-card{cursor:pointer;transition:transform .15s ease;border-radius:14px;overflow:hidden;border:1px solid var(--line);background:linear-gradient(180deg, rgba(25,18,54,.6), rgba(17,13,35,.6))}
.blog-card:hover{transform:translateY(-2px)}
.blog-media{aspect-ratio:16/9;overflow:hidden;background:#0e0c18}
.blog-media img{width:100%;height:100%;object-fit:cover;display:block;filter:saturate(1.05)}
.blog-body{padding:14px 16px 18px}
.blog-title{margin:6px 0 8px;font-size:19px;line-height:1.35}
.blog-excerpt{color:var(--muted);font-size:14px;line-height:1.6;display:-webkit-box;-webkit-line-clamp:3;-webkit-box-orient:vertical;overflow:hidden}
.blog-meta{display:flex;gap:10px;align-items:center;color:#8f95aa;font-size:12px;margin-top:8px}
.blog-card.expanded{outline:1px solid var(--ring)}
.blog-expand{display:none;padding:0 16px 16px}
.blog-card.expanded .blog-expand{display:block}
.blog-expand .content{max-width:78ch;line-height:1.8}
.blog-expand .content img{max-width:100%;height:auto;border-radius:10px}
.blog-expand .content iframe{max-width:100%}
.blog-expand .toolbar{display:flex;gap:10px;margin-top:12px}
.blog-expand .close{background:transparent;border:1px solid var(--ring);color:var(--muted);border-radius:10px;padding:8px 12px;cursor:pointer}
.blog-expand .open{background:transparent;border:1px solid var(--accent);color:var(--accent);border-radius:10px;padding:8px 12px;cursor:pointer}

/* Heroes */
.heroes-grid{display:grid;grid-template-columns:1fr;gap:20px}
@media(min-width:760px){.heroes-grid{grid-template-columns:1fr 1fr}}
@media(min-width:1140px){.heroes-grid{grid-template-columns:1fr 1fr 1fr}}
.hero-card .hero-media video{width:100%;height:auto;display:block;border-radius:12px;filter:brightness(.85)}
.hero-body h3{margin:.5em 0 0}
.hero-body .muted{color:#9aa1b9}
.hero-header{display:grid;grid-template-columns:1fr;gap:22px;margin:14px 0 24px}
.hero-visual video{width:100%;border-radius:14px;filter:brightness(.85)}
.hero-copy .muted{color:#9aa1b9}
@media(min-width:900px){.hero-header{grid-template-columns:1.3fr 1fr}}

/* Forms */
.signin{display:grid;gap:12px;max-width:380px}
.signin label{display:grid;gap:8px}
.signin input{padding:12px;border-radius:10px;border:1px solid var(--line);background:var(--bg-elev);color:var(--ink)}
.hidden{display:none}

/* === Global cosmic background image (on all pages) === */
body{
  background:
    radial-gradient(1200px 600px at 80% -10%, rgba(33,212,255,.12), transparent 60%),
    radial-gradient(900px 500px at -10% 10%, rgba(141,107,255,.17), transparent 65%),
    url("../img/shattered-constellations.png") center / cover no-repeat fixed,
    var(--bg);
}

