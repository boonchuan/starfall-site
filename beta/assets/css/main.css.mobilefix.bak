/* === Starfall rainbow gold nav glow === */
@keyframes starfallAurora {
  0%   { color:#ffd37e; text-shadow:0 0 12px rgba(255,214,142,.8); }
  25%  { color:#ffe29b; text-shadow:0 0 16px rgba(255,200,100,.8),0 0 20px rgba(255,160,120,.5); }
  50%  { color:#a0f2ff; text-shadow:0 0 16px rgba(160,240,255,.8),0 0 22px rgba(180,255,220,.6); }
  75%  { color:#d7a5ff; text-shadow:0 0 18px rgba(215,165,255,.9),0 0 24px rgba(120,180,255,.6); }
  100% { color:#ffd37e; text-shadow:0 0 12px rgba(255,214,142,.8); }
}

/* breathing effect */
@keyframes starfallPulse {
  0%,100% { transform:scale(1); }
  50% { transform:scale(1.05); }
}

/* Apply to active + hover links */
.main-nav a.active,
.main-nav a:hover,
.main-nav a:focus {
  animation: starfallAurora 5s linear infinite, starfallPulse 4s ease-in-out infinite;
}

/* Optional: subtle baseline shimmer for all nav links */
.main-nav a {
  background:linear-gradient(90deg,#ffe6b0,#a0f2ff,#d7a5ff,#ffe6b0);
  background-clip:text;
  -webkit-background-clip:text;
  -webkit-text-fill-color:transparent;
  animation: starfallAurora 12s linear infinite;
}
