/* === Enhanced nav links for glow and readability === */
.main-nav a {
  color: #e0e0ff;
  font-weight: 500;
  letter-spacing: .4px;
  transition: color .3s ease, text-shadow .3s ease;
}
.main-nav a:hover,
.main-nav a:focus {
  color: #ffd37e;
  text-shadow: 0 0 8px rgba(255,210,120,.7);
}
.main-nav a.active {
  color: #ffe9b0;
  text-shadow: 0 0 10px rgba(255,200,100,.9);
}

/* Lore hub cards */
.lore-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(280px,1fr));gap:18px;margin:18px 0}
.lore-card{background:rgba(15,11,28,.55);border:1px solid var(--line);border-radius:18px;padding:18px;box-shadow:0 6px 24px rgba(0,0,0,.25)}
.lore-card h2{margin:0 0 8px}
.lore-card .excerpt{opacity:.9}
.lore-card .btn{margin-top:10px}
.lore-chapter{margin-top:24px}
.chapter-nav{margin-top:16px}
/* === Starfall premium nav links === */
.main-nav{ display:flex; gap:36px; }
.main-nav a{
  position:relative;
  margin:0; padding:10px 6px;
  font-weight:600; letter-spacing:.35px;
  color:#eef1ff; text-decoration:none;
  transition:color .25s ease, text-shadow .25s ease;
}
.main-nav a:hover,
.main-nav a:focus{
  color:#fff6d9;
  text-shadow:0 0 10px rgba(255,214,142,.75);
}

/* nebula underline */
.main-nav a::after{
  content:"";
  position:absolute; left:50%; bottom:-8px;
  width:42px; height:3px; border-radius:3px;
  transform:translateX(-50%) scaleX(0);
  background:linear-gradient(90deg,#ffd37e 0%, #a3f0ff 100%);
  box-shadow:0 0 10px rgba(255,214,142,.6), 0 0 10px rgba(163,240,255,.5) inset;
  opacity:.85; transition:transform .25s ease;
}
.main-nav a:hover::after,
.main-nav a:focus::after,
.main-nav a.active::after{ transform:translateX(-50%) scaleX(1); }

.main-nav a.active{
  color:#ffe9b0;
  text-shadow:0 0 12px rgba(255,214,142,.9);
}

@media (max-width:900px){
  .main-nav{ gap:20px; }
  .main-nav a::after{ width:32px; bottom:-6px; }
}
